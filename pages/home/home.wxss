/* pages/home/home.wxss */
@import "/pages/movie-grid/movie-grid";
.search-wrap{
  width: 100%;
  height: 50rpx;
  padding: 10rpx 40rpx 10rpx;
  background-color: #f2f2f2;
}
.search-wrap icon{
  vertical-align: top;
  margin-top: 8rpx;
}
.search-wrap text{
  vertical-align: top;
  color: #777;
}
.session-page{
  background:#fff;
  border-width: 1rpx 0;
  border-style: solid ;
  border-color: #e9e9e9;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}
.session-header{
  display: flex;
  padding: 20rpx 30rpx;
  align-items:center;
}
.header-title{
  color: #4a4a4a;
  flex: 1;
  font-size: 36rpx;
  font-weight: 500;
}
.header-more{
  color: #32dd32;
}
.session-content{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  white-space: nowrap;
}
.movie-scroll{
  white-space: nowrap;
  width: 100%;
}
/* pages/search/search.wxss */
.search{
  display: flex;
  flex-direction: row;
  height: 50rpx;
  padding: 10rpx 40rpx 10rpx 40rpx;
}
.search icon{
  margin-top: 8rpx;
}
.search-movie{
  flex: 1;
}
.search-cancel{
  width: 80rpx;
  
}
.movie-list{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.list-wrap{
  display: flex;
  flex-direction: row;
  background-color: white;
  padding: 20rpx 40rpx ;
  border-bottom: 1px solid #eee;
}
.img-box{
  width: 80rpx;
  height: 120rpx;
  margin-right: 40rpx;
}
.img-box image{
  width: 100%;
  height: 100%;
}
.detail-wrap{
  flex: 1;
  display:flex;
  flex-direction: column;
  font-size: 28rpx;
}
.detail-wrap .movie-name{
  font-size: 34rpx;
  color: black;
  text-align: left;
  font-weight: 600;
  line-height: 60rpx;
}
.detail-wrap .movie-detail{
  width: 500rpx;
  font-size: 26rpx;
  color: #555;
  font-weight: 400;
  line-height: 60rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis; 
}

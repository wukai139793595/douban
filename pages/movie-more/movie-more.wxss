/* pages/movie-more/movie-more.wxss */
@import '/pages/movie-list/movie-list.wxss';
page{
  height: 100%;
}
.container{
  width:100vw;
  background-color: #f2f2f2;
}
.movie-bar{
  width: 100%;
  display: flex;
  position: fixed;
  background-color: #eee;
  z-index: 100;
}
.movie-bar text{
  flex: 1;
  height: 90rpx;
  text-align: center;
  font-size: 35rpx;
  line-height: 90rpx;
  font-weight: 600;
  color: #888;
  box-sizing: border-box;

}
.movie-bar .active{
  color: green;
  border-bottom: 2px solid lightgreen;
}
.session-movie{
  margin-top:88rpx;
  background-color: white;

}
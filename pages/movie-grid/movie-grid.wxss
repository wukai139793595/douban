/* pages/movie-grid/movie-grid.wxss */
@import "/pages/movie-rating/movie-rating";
.movie-wrapper{
  display: inline-block;
  margin: 0 10rpx;
}
.movie-content{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.movie-content .poster{
  width: 200rpx;
  height: 280rpx;
}
.movie-content .name{
  width: 200rpx;
  color: #4a4a4a;
  font-weight:600;
  font-size: 28rpx;
  text-align: center;
  white-space: nowrap;
  text-overflow:hidden;
}
.wish-count{
  color: #9e9e9e;
  font-size: 24rpx;
}